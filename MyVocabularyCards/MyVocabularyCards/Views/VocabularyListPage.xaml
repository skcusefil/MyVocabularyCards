                                           FontSize="16"/>
                                </Frame>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <ListView.Behaviors>
                        <behaviors:EventToCommandBehavior Command="{Binding SelectVocabCommand}"
                                                  EventName="ItemSelected"
                                                  Converter="{StaticResource SelectedItemConverter}"/>
                    </ListView.Behaviors>
                </ListView>
            </StackLayout>
           
        </StackLayout>
    </Grid>
    

